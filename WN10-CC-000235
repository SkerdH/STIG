# Define registry path and value for Edge SmartScreen setting
$regPath = "HKLM:\SOFTWARE\Policies\Microsoft\Edge"
$regValueName = "SmartScreenEnabled"
$regValueData = 1  # 1 to enable SmartScreen, 0 to disable

# Check if the registry path exists, create if necessary
if (!(Test-Path $regPath)) {
    Write-Host "Creating registry path: $regPath"
    New-Item -Path $regPath -Force | Out-Null
}

# Set the registry value to prevent bypassing SmartScreen
Write-Host "Configuring Windows Defender SmartScreen filter to prevent bypassing..."
Set-ItemProperty -Path $regPath -Name $regValueName -Value $regValueData -Type DWord

# Verify the setting
$verifyValue = (Get-ItemProperty -Path $regPath -Name $regValueName).$regValueName
if ($verifyValue -eq $regValueData) {
    Write-Host "Windows Defender SmartScreen filter warnings cannot be bypassed in Microsoft Edge."
} else {
    Write-Host "Error: Failed to configure SmartScreen setting."
}
